{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    //定义类型定义文件的根目录
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    // 引入辅助函数集
    "importHelpers": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist"]
}
