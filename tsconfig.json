{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    //定义类型定义文件的根目录
    "esModuleInterop": true,
    // 引入辅助函数集
    "importHelpers": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
    "test/jest-setup.ts"
  ],
  "exclude": [
    "./dist"
  ]
}